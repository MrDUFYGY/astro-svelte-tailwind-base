---
// Importar el archivo CSS global
import '../styles/global.css';
import InputWithModal from '../components/misc-svelte/InputWithModal.svelte';

---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>HidroApp - Valija Electrónica</title>
  </head>
  <body class="min-h-screen bg-gray-100">
    <main class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl font-bold text-indigo-600 mb-6">
          Bienvenido a HidroApp
        </h1>
        <p class="text-lg text-gray-700 mb-8">
          Aplicación de Valija Electrónica - Versión de Escritorio
        </p>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <p class="text-gray-600">
            Esta es una aplicación construida con Astro, Tailwind CSS y Svelte.
          </p>
        </div>
        <InputWithModal client:load />
        <!-- Ejemplos de Tailwind CSS -->
        <section class="mt-12 text-left">
          <h2 class="text-2xl font-semibold text-indigo-700 mb-4">Ejemplos visuales de Tailwind CSS</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Botón -->
            <div class="p-4 bg-white rounded-lg shadow flex flex-col items-center">
              <button class="px-6 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition">Botón Tailwind</button>
              <span class="mt-2 text-sm text-gray-500">Botón con hover y transición</span>
            </div>
            <!-- Card -->
            <div class="p-4 bg-white rounded-lg shadow flex flex-col items-center">
              <div class="w-24 h-24 rounded-full bg-gradient-to-tr from-indigo-500 to-pink-400 mb-4 flex items-center justify-center text-white text-3xl font-bold">TW</div>
              <p class="font-semibold mb-2">Card con gradiente</p>
              <p class="text-gray-500 text-sm text-center">Utilizando utilidades de gradiente, espaciado y tipografía.</p>
            </div>
            <!-- Badge -->
            <div class="p-4 bg-white rounded-lg shadow flex flex-col items-center">
              <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-semibold">Badge</span>
              <span class="mt-2 text-sm text-gray-500">Badge con colores personalizados</span>
            </div>
            <!-- Alert -->
            <div class="p-4 bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700">
              <p class="font-semibold">¡Alerta de ejemplo!</p>
              <p class="text-sm">Este es un mensaje de alerta usando utilidades de color y borde.</p>
            </div>
          </div>
        </section>
      </div>
    </main>
  </body>
</html>
